<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadlineMedium">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="HeadlineRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textTetriary</item>
    </style>

    <style name="CaptionRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="SubheadMedium">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/textTetriary</item>
    </style>

    <style name="TitleBold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TitleRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textTetriary</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <style name="Title2Semibold">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Title3Semibold">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textTetriary</item>
    </style>

    <style name="TextButtonHelper" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/activePrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColorHint">@color/defaultPrimary</item>
        <item name="android:editTextColor">@color/textPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="colorControlActivated">#6534FF</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>